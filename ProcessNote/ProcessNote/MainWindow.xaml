<Window x:Class="ProcessNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessNote"
        mc:Ignorable="d"
        Title="PROCESS NOTE" Height="510" Width="800">
    <DockPanel HorizontalAlignment="Left" Height="416" LastChildFill="False" Margin="66,39,0,0" VerticalAlignment="Top" Width="660">

        <Grid DockPanel.Dock="Bottom" Height="189" Margin="321,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView Name ="commentsList" HorizontalAlignment="Left" Height="156" VerticalAlignment="Top" Width="339" Margin="0,23,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Comments" Width="339"/>
                    </GridView>
                </ListView.View>
            </ListView>


        </Grid>
        <Grid DockPanel.Dock="Left" Width="321" Margin="0,0,0,-188.8">
            <DataGrid Name="processTable" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dataGrid_selectedRow" MouseDoubleClick="dataGrid_MouseDoubleClick" CanUserResizeColumns="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PID" Binding="{Binding PID}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="245"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <Grid Margin="0,0,0,77.2" Width="338">
            <TextBox Name ="RunningTime" HorizontalAlignment="Left" Height="45" Margin="191,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="90"/>
            <TextBox x:Name ="CPU" HorizontalAlignment="Left" Height="45" Margin="60,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="90"/>
            <TextBox Name ="StartTime" HorizontalAlignment="Left" Height="45" Margin="191,104,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="90"/>
            <TextBox x:Name ="MemoryUsage" HorizontalAlignment="Left" Height="45" Margin="60,104,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="90"/>
            <Label Content="Run Time" HorizontalAlignment="Left" Height="25" Margin="191,10,0,0" VerticalAlignment="Top" Width="90"/>
            <Label Content="CPU Usage" HorizontalAlignment="Left" Height="25" Margin="60,10,0,0" VerticalAlignment="Top" Width="90"/>
            <Label Content="Start Time" HorizontalAlignment="Left" Height="25" Margin="191,80,0,0" VerticalAlignment="Top" Width="90"/>
            <Label Content="Memory Usage" HorizontalAlignment="Left" Height="25" Margin="60,80,0,0" VerticalAlignment="Top" Width="100"/>
            <Button Margin="40,192,213,-85" Content="Show &#10;threads" Click="Open_ThreadsWindow"/>
            <Button Margin="130,192,124,-85" Content="Add &#10;comment" Click="AddComment_Click"/>
            <Button Margin="219,192,37,-85" Content="Search &#10;online" Click="Search_Click"/>

        </Grid>


    </DockPanel>
</Window>
